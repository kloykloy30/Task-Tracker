    <script>

        function enterLogin()
        {
            if (event.which == 13) {
                event.preventDefault();
                $('#loginbutton').click();
            }
        }

        $(function () {
        	$(".menu").dropit();

        	$('#refresh').click(function () {
        		$('#captcha').val('');
        		var tg = $('#Chptchaimage')[0];
        		tg.src = tg.src.replace(/\?.+/, '') + '?st=' + parseInt(Math.random() * 10000);
        	});

        	$.validator.addMethod("validSecretNumber", function (value, element) {
        		var isSuccess = false;
        		$.ajax({
        			url: "/Captcha/Validate",
        			type: "POST",
        			async: false,
        			data: { captchaText: value },
        			success: function (data) {
        				isSuccess = data.code == 0 ? true : false;
        			}
        		});
        		if(isSuccess)
        		{
        			$('#isCaptcha').val('1');
        		}
        		return isSuccess;
        	});

            $('#loginbutton').click(function () {
            	var data = { user_id: $('#username').val(), user_pw: encodeURIComponent($('#password').val()), returnUrl: encodeURIComponent('http://cf.gameclub.ph/ESports/CFELAbout'), isCaptcha: $('#isCaptcha').val() };
                
                if ($('form').valid()) {
                    $.ajax({
                        url: "/Login/LoginAct",
                        type: "POST",
                        data: data,
                        success: function (e) {
                            Result = parseInt(e.code);

                            if(Result == 1) {	// success
                                if($("#returnUrl").length > 0 && Login_CheckStr($("#returnUrl").val(), " ", "")!=0) {
                                    location.href = $("#returnUrl").val();
                                } else {
                                    location.href = "/";
                                }
                            } else if(Result == -100) {
                                alert('Login is not allowed URL.');
                            } else if(Result == -101) {
                                alert('Blocked IP');
                            } else if(Result == -102) {
                                alert('Wrong ID or Password.\n\nPlease check it again.');
                            } else if(Result == -103) {
                                alert('Unable to login ID.');
                            } else if(Result == -104) {
                                alert('Failed to login.\nPlease check your correct ID again.');
                                $("#username").val("");
                                $("#username").focus();
                            } else if(Result == -105) {
                                alert('Failed to login.\nPlease check your correct Password again.');
                                $("#password").val("");
                                $("#password").focus();
                            } else if(Result == -106) {
                                alert('Restricted login.');
                            } else if (Result == -107) {
                            	alert('5 Times Over Failed to login. Please enter secret number.');
                            	$('#divCaptcha').show();
                            	$('#refresh').click();
                            	$('#captcha').rules("add", {
                            		required: true,
                            		minlength: 6,
                            		maxlength: 6,
                            		validSecretNumber: true,
                            		messages: {
                            			required: 'Please enter secret number.',
                            			validSecretNumber: 'Incorrect Secret Number. Please try again.'
                            		}
                            	});
                            } else {
                            	alert('Failed to login.\n\nPlease try again.');
                            }
                        },
                        error: function (xhr, status, error) {
                            alert(xhr.responseText);
                            return;
                        }
                    });
                }
            });

            $('#cancelbutton').click(function() {
                location.href = 'http://www.gameclub.ph';
            });

            $.validator.addMethod("alphanumeric", function (value, element) {
            	return this.optional(element) || /^[a-zA-Z0-9]+$/.test(value);
            });

            $('form').validate({
                onfocusout: function (element) {
                    $(element).valid();
                },
                onkeyup: false,
                onclick: false,
                rules: {
                    username: {
                        required: true,
                        alphanumeric: true,
                        minlength: 6,
                        maxlength: 15
                    },
                    password: {
                        required: true,
                        minlength: 6,
                        maxlength: 15,                        
                    },                    
                },
                messages: {
                    username: {
                    	required: 'Please enter your account name.',
                    	alphanumeric: 'The following are allowed in Username : a-z, 0-9, No space &amp; special characters.',
                        minlength: 'Username must be at least 6 to 15 characters in length.',
                        maxlength: 'Username must be at least 6 to 15 characters in length.',                        
                    },
                    password: {
                        required: 'Password  is required.',
                        minlength: 'Password must be at least 6 to 15 characters in length.',
                        maxlength: 'Password must be at least 6 to 15 characters in length.',                        
                    },
                },
                submitHandler: function (form) {
                    alert("Form submitted!");
                    return false;
                },
                highlight: function (element) {
                    var id_attr = "#" + $(element).attr("id") + "1";
                    $(element).closest('.form-group').addClass('has-error');
                    $(id_attr).addClass('fa-exclamation-circle');
                },
                unhighlight: function (element) {
                    var id_attr = "#" + $(element).attr("id") + "1";
                    $(element).closest('.form-group').removeClass('has-error');
                    $(id_attr).removeClass('fa-exclamation-circle');
                },
                errorElement: 'span',
                errorClass: 'help-block',
                errorPlacement: function (error, element) {
                    if (element.attr("name") == "dob_month" || element.attr("name") == "dob_day") {
                        error.appendTo(element.parent("div").next("div"));
                    } else {
                        error.insertAfter(element);
                    }
                }
            });

        });
    </script>    

